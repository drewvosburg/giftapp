<div class="container">
	<div class="row no-mobile">
		<div class="col-xs-12">
			<h1>Gifts you are giving for:</h1>
		</div>
	</div>
	<div class="row" id="list">
			{{#each this}}
			<!-- this second loop is the product of weird underscore results.  Probably can be refactored out. -->
			{{#each this}}
				<div class="col-lg-offset-2 col-lg-8 col-md-offset-1 col-md-10 col-xs-12" >
					<h2>{{owner}}</h2>
				</div>

			{{#each items}}
				<div class="col-lg-offset-2 col-lg-8 col-md-offset-1 col-md-10 col-xs-12" >
					<div class="item">
					<div class="checkbox {{gotten}}" data-checked="{{gotten}}"></div>
					<h2>{{title}}</h2>
					{{#if url}}
					<a href="{{url}}" target="_blank"><span class="price btn">{{#if price}}${{price}}{{else}}Available{{/if}} from <span class="site">{{#site}}{{url}}{{/site}}</span> &#8594;</span></a>
					{{else}}
					{{#if price}}<span class="price btn">${{price}}</span>{{/if}}
					{{/if}}
					</div>
				</div>
			{{/each}}
			{{/each}}
			{{/each}}

	</div>
</div>